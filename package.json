{
  "name": "python2ts-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Python to TypeScript transpiler monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebastian-software/python2ts.git"
  },
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:coverage:python2ts": "vitest --run --coverage --config vitest.coverage-python2ts.config.ts",
    "test:coverage:pythonlib": "vitest --run --coverage --config vitest.coverage-pythonlib.config.ts",
    "test:browser": "vitest --run --config vitest.browser.config.ts",
    "lint": "eslint packages/*/src tests",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "docs:dev": "pnpm --filter docs start",
    "docs:build": "pnpm --filter docs build",
    "prepare": "husky"
  },
  "keywords": [
    "python",
    "typescript",
    "transpiler"
  ],
  "author": "Sebastian Software GmbH",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.0.0",
    "@vitest/browser": "^4.0.17",
    "@vitest/browser-playwright": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.28.1",
  "lint-staged": {
    "*.{ts,js,json,md,yml,yaml}": "prettier --write"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@latest"
    }
  }
}
